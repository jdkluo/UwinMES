<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_detail_halving_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/division_wire"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlayout_serve"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_list_item"
            android:paddingLeft="@dimen/margin_left">


            <TextView
                android:id="@+id/tv_child_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:ems="5"
                android:singleLine="true"
                android:text="Table"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_theme_size" />

            <TextView
                android:id="@+id/tv_child_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_child_table"
                android:ems="10"
                android:singleLine="true"
                android:text="2016-07-27 16:42"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_theme_size" />

            <TextView
                android:id="@+id/tv_child_qsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_child_value"
                android:ems="12"
                android:singleLine="true"
                android:text="方案名称方案名称"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_theme_size" />

            <TextView
                android:id="@+id/tv_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_child_qsname"
                android:ems="5"
                android:singleLine="true"
                android:text="张世杰"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_theme_size" />

            <TextView
                android:id="@+id/tv_child_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ems="4"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/color_red"
                android:textSize="@dimen/text_theme_size" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/tv_child_delete"
                android:layout_toStartOf="@+id/tv_child_delete"
                android:background="@color/division_wire" />

            <TextView
                android:id="@+id/tv_child_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView6"
                android:layout_toStartOf="@+id/textView6"
                android:ems="4"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_theme_size" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_detail_halving"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/division_wire"
            android:visibility="gone" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_detail_halving_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/division_wire"
        android:visibility="gone" />

</LinearLayout>